@model ProfileViewModel

@{
    ViewData["Title"] = "CreateArt";
    Layout = "_Layout";
}

<header id="gtco-simple-header" class="gtco-cover" role="banner" style="background-color: black; width: 100%;">
</header>

<h2>Showcase Your Artwork</h2>

<form asp-action="CreateExhibition" asp-controller="Profile" enctype="multipart/form-data" method="post" onsubmit="return jQueryAjaxUpdate(this);">
 
    <div class="form-group">
        <p><input asp-for="@Model.Artwork.ArtName" type="text" class="form-control1" placeholder="Art name"></p>
        <p><input asp-for="@Model.Artwork.Height" type="text" class="form-control1" placeholder="Height">cm</p>
        <p><input asp-for="@Model.Artwork.Width" type="text" class="form-control1" placeholder="Width">cm</p>
        <p><input asp-for="@Model.Artwork.Year" type="text" class="form-control1" placeholder="Year"></p>

        <label asp-for="@Model.Artwork.Type">Category: </label>
        <select runat="server" name="category" id="category">
            <option value="foto">Foto</option>
            <option value="målning">Målning</option>
            <option value="teckning">Teckning</option>
            <option value="digital-konst">Digital konst</option>
        </select>
        <br />
        <textarea asp-for="@Model.Artwork.Description" rows="4" cols="50" type="text" class="form-control1" placeholder="Description"></textarea>
        <h1>Drag and drop files</h1>
        <div class="drop-zone">
            <span class="drop-zone__prompt">Drop file here or click to upload</span>
            <input asp-for="@Model.Artwork.ImageFile" type="file" name="myFile" class="drop-zone__input">
            <span asp-validation-for="@Model.Artwork.ImageFile" class="text-danger"></span>
        </div>
        <input type="submit" value="Upload" class="btn btn-primary" asp-route-id="@Model.Member.MemberId" />
    </div>
</form>
<form  asp-action="UpdateExhibition" asp-controller="Profile" enctype="multipart/form-data" method="post">

    <div class="form-group" style="float: left;">
        <p><input asp-for="@Model.Exhibit.Name" type="text" class="form-control1" placeholder="Exhibition name"></p>
        <label for="start">Start date:</label>

        <input asp-for="@Model.Exhibit.StartDate" type="date" class="start" runat="server" id="start" name="trip-start"
               value="2021-02-09"
               min="2021-01-01" max="2021-12-31" />
        <label for="start">Stop date:</label>

        <input asp-for="@Model.Exhibit.StopDate" type="date" id="stop" name="trip-stop"
               value="2021-02-09"
               min="2021-01-01" max="2021-12-31" />
        <input type="submit" value="Create" class="btn btn-primary" asp-route-id="@Model.Member.MemberId" />

    </div>
</form>
    <div class="gtco-section border-bottom">
        <div class="artwork-container">
            <h4>Exhibit art</h4>

        @foreach (var item in Model.ListOfArtwork)
        {
            <div class="exhibit-art">
                <picture>
                    <img src="~/imagesArt/@item.ImageName">
                </picture>
            </div>
        }
    </div>
</div>
